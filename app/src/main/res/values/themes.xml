<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidCourses" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pale_crimson</item>
        <item name="colorPrimaryVariant">@color/unripe_strawberry</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/whole_wheat</item>
        <item name="colorSecondaryVariant">@color/ant_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AndroidCourses.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidCourses.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidCourses.PopupOverlay" parent="android:style/TextAppearance" />


    <style name="EditMainTheme">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="nameEditTheme" parent="EditMainTheme">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">40</item>
    </style>

    <style name="phoneEditTheme" parent="EditMainTheme">
        <item name="android:inputType">phone</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ageEditTheme" parent="EditMainTheme">
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">2</item>
    </style>

    <style name="buttonEditTheme" parent="EditMainTheme">
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="table">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttons" parent="buttonEditTheme">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="RoundedEdgesButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/rounded_edges_btn</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:backgroundTint">@null</item>

    </style>

    <style name="VerticalGradientButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/vertical_gradient_btn</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_weight">0.5</item>
    </style>


    <style name="EditTextMainTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="EditTextSubTheme" parent="EditTextMainTheme">
        <item name="fontFamily">@font/julee_regular</item>
        <item name="android:textColor">@color/ant_red</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BtnSubTheme" parent="EditTextMainTheme">
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="fontFamily">@font/julee_regular</item>
        <item name="android:textColor">@color/ant_red</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="roundCornerImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/white</item>
    </style>
</resources>